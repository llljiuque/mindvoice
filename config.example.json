{
  "asr": {
    "provider": "volcano",
    "language": "zh-CN",
    "providers": {
      "volcano": {
        "base_url": "wss://openspeech.bytedance.com/api/v3/sauc/bigmodel",
        "app_id": "your_app_id",
        "app_key": "your_app_key",
        "access_key": "your_access_key"
      }
    }
  },
  "storage": {
    "type": "sqlite",
    "path": "~/.voice_assistant/history.db"
  },
  "audio": {
    "format": "WAV",
    "channels": 1,
    "rate": 16000,
    "chunk": 1024
  },
  "ui": {
    "theme": "light",
    "position": {
      "x": 100,
      "y": 100
    },
    "size": {
      "width": 400,
      "height": 300
    }
  }
}
